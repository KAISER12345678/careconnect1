generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  PATIENT
  PROVIDER
  ADMIN
}

enum ProviderType {
  DOCTOR
  PHARMACY
}

enum ProviderStatus {
  PENDING
  APPROVED
  REJECTED
}

enum AppointmentStatus {
  PENDING_CONFIRMATION
  CONFIRMED
  CANCELLED
  COMPLETED
  NO_SHOW
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  passwordHash String
  role      UserRole @default(PATIENT)
  name      String
  phone     String?
  city      String?
  language  String?  // e.g. "en", "fr", "ar"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  provider  Provider?
  patientAppointments Appointment[] @relation("PatientAppointments")
  reviews   Review[]
  favorites Favorite[]
  documents Document[]
}

model Provider {
  id        String         @id @default(cuid())
  userId    String         @unique
  type      ProviderType
  status    ProviderStatus @default(PENDING)
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  doctorProfile   DoctorProfile?
  pharmacyProfile PharmacyProfile?
}

model Specialty {
  id   String @id @default(cuid())
  name String
  slug String @unique

  doctorSpecialties DoctorSpecialty[]
}

model DoctorProfile {
  id          String   @id @default(cuid())
  providerId  String   @unique
  clinicName  String?
  bio         String?
  address     String
  city        String
  lat         Float
  lng         Float
  priceMin    Int
  currencies  String?  // default "MAD" or "EUR"
  languages   String[] // ["fr","ar"]
  photos      String[] // URLs

  provider    Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  specialties DoctorSpecialty[]
  availabilityRules AvailabilityRule[]
  availabilityExceptions AvailabilityException[]
  appointments Appointment[]
  reviews Review[]
  favorites Favorite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([city])
}

model DoctorSpecialty {
  doctorId    String
  specialtyId String
  doctor      DoctorProfile @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  specialty   Specialty     @relation(fields: [specialtyId], references: [id], onDelete: Cascade)

  @@id([doctorId, specialtyId])
}

model PharmacyProfile {
  id         String @id @default(cuid())
  providerId String @unique
  name       String
  address    String
  city       String
  lat        Float
  lng        Float
  phone      String?
  hours      String? // free text for MVP
  services   String[] // ["delivery","dermocosmetics"]
  photo      String?

  provider   Provider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([city])
}

model AvailabilityRule {
  id         String @id @default(cuid())
  doctorId   String
  dayOfWeek  Int    // 0=Sun ... 6=Sat
  startTime  String // "09:00"
  endTime    String // "17:00"
  slotMinutes Int   @default(20)

  doctor DoctorProfile @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId, dayOfWeek])
}

model AvailabilityException {
  id        String @id @default(cuid())
  doctorId  String
  date      DateTime // date-only in UTC midnight
  isClosed  Boolean  @default(true)
  startTime String?
  endTime   String?

  doctor DoctorProfile @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@index([doctorId, date])
}

model Appointment {
  id        String @id @default(cuid())
  doctorId  String
  patientId String
  startAt   DateTime
  endAt     DateTime
  status    AppointmentStatus @default(PENDING_CONFIRMATION)
  visitType String @default("in_person")
  priceAtBooking Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  doctor  DoctorProfile @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  patient User         @relation("PatientAppointments", fields: [patientId], references: [id], onDelete: Cascade)
  review  Review?

  @@index([doctorId, startAt])
  @@index([patientId, startAt])
}

model Review {
  id          String @id @default(cuid())
  appointmentId String @unique
  doctorId    String
  patientId   String
  rating      Int
  text        String
  isHidden    Boolean @default(false)
  createdAt   DateTime @default(now())

  appointment Appointment @relation(fields: [appointmentId], references: [id], onDelete: Cascade)
  doctor      DoctorProfile @relation(fields: [doctorId], references: [id], onDelete: Cascade)
  patient     User @relation(fields: [patientId], references: [id], onDelete: Cascade)

  @@index([doctorId])
}

model Favorite {
  patientId String
  doctorId  String

  patient User @relation(fields: [patientId], references: [id], onDelete: Cascade)
  doctor  DoctorProfile @relation(fields: [doctorId], references: [id], onDelete: Cascade)

  @@id([patientId, doctorId])
}

model Document {
  id        String @id @default(cuid())
  patientId String
  fileUrl   String
  fileName  String
  createdAt DateTime @default(now())

  patient User @relation(fields: [patientId], references: [id], onDelete: Cascade)
}
